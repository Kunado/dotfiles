# aliases
# -------------------

alias ls="ls -G"
alias l="ls -la"
alias la="ls -la"
alias l1="ls -1"
alias chrome="open -g -a /Applications/Google\ Chrome.app"
alias dc="docker-compose"
alias latexmk="latexmk -pvc"
alias delb="git branch | peco | xargs git branch -D"
alias chb="git branch | peco | xargs git checkout"
alias tree="tree -NC"
alias date="gdate"